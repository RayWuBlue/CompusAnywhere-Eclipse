<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_cell"
    android:orientation="vertical" >


        <LinearLayout
            android:id="@+id/article_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="8.0dip" >

            <RelativeLayout
                android:id="@+id/article_top_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RelativeLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingRight="7.0dip" >

                    <ImageView
                        android:id="@+id/right_image"
                        android:layout_width="80dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="4.0dip"
                        android:layout_centerVertical="true"
                        android:background="@drawable/loading"
                        android:scaleType="centerCrop" />



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/right_image"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/item_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:singleLine="true"
                            android:text="text"
                            android:layout_alignParentTop="true"
                            android:marqueeRepeatLimit="marquee_forever"
                             />

                        <LinearLayout
                            android:id="@+id/info_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                             android:layout_alignParentBottom="true"
                                                        android:paddingTop="5dp"
                            android:paddingBottom="10dp"
                             android:layout_gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/item_source"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.0"
                                android:layout_marginLeft="2.0dip"
                                android:text="text"
                                android:layout_marginRight="2.0dip"
                                android:ellipsize="end"
                                android:singleLine="true" />

                            <TextView
                                android:id="@+id/list_item_local"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="2.0dip"
                                android:text="text"
                                android:layout_marginRight="2.0dip"/>

                            <TextView
                                android:id="@+id/comment_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                               android:layout_marginLeft="2.0dip"
                                android:text="text"
                                android:layout_marginRight="2.0dip"
                                android:layout_weight="0.0" />

                            <TextView
                                android:id="@+id/publish_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.0"
                                android:layout_marginLeft="2.0dip"
                                android:text="text"
                                android:layout_marginRight="2.0dip" />

                            <View
                                android:id="@+id/right_padding_view"
                                android:layout_width="25.0dip"
                                android:layout_height="1.0dip"
                                android:layout_weight="0.0" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/popicon_anchor"
                    android:layout_width="1.0dip"
                    android:layout_height="5.0dip"
                    android:layout_alignBottom="@id/title_layout"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_abstract"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="4.0dip"
                android:layout_marginRight="7.0dip"
                android:text="text"
                android:lineSpacingExtra="4.0dip" />
            
            
        </LinearLayout>

        <ImageView
            android:id="@+id/alt_mark"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:scaleType="fitXY" />

    <View
            android:id="@+id/item_divider"
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/gray" />

</LinearLayout>