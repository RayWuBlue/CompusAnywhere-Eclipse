<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Theme.CustomDialog" parent="android:style/Theme.Dialog">   
    <item name="android:windowBackground">@color/white</item>   
</style>   

    <style name="Animation_Activity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/open_next</item>
        <item name="android:activityOpenExitAnimation">@anim/close_main</item>
        <item name="android:activityCloseEnterAnimation">@anim/open_main</item>
        <item name="android:activityCloseExitAnimation">@anim/close_next</item>
    </style>
    
    <!-- activity默认属性 -->
    <style name="ContentOverlay" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
		<item name="android:windowAnimationStyle">@style/Animation_Activity</item>
        
		
    </style>

    <style name="DefaultOverlay" parent="@android:style/Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 去除listiview默认属性 -->
    <style name="remove_listview_default">
        <item name="android:listSelector">#00000000</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:background">@null</item>
    </style>

    <style name="tabbar_item">
        <item name="android:button">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/item_tab</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:padding">2dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:drawablePadding">2.0dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="font_style">
        <item name="android:textColor">#ff999999</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowRadius">1.0</item>
        <item name="android:shadowDy">2.0</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ask_select_bar">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#6F6F6F</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="register_editor_paddingLeft">
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="register_btn">
        <item name="android:background">@drawable/selector_blue_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="schedule_week_item_style">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>

    <!-- 校友圈动态评论按钮 -->
    <style name="qz_detail_toolbar_icon_style">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">#7D7D7D</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_choose_bg</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>
    </style>

    <style name="MMListCatalog">
        <item name="android:textSize">14.0dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#5E5E5E</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#E3E4E4</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="friend_head_layout">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:background">@drawable/press_bg_selector</item>
    </style>

    <style name="friend_head_title">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="friend_head_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/lbs_goto_arrow</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="ButtonRed" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/selector_red_button</item>
    </style>

    <style name="top_category_scroll_view_item_text">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="list_item">
        <item name="android:background">@drawable/selector_list_item</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">0.5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="list_item_red">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@drawable/selector_list_item_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="progress_loading" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@anim/loading</item>
        <item name="android:layout_width">60dip</item>
        <item name="android:layout_height">60dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="progress_loading_small" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@anim/loading_small</item>
        <item name="android:layout_width">40dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="weibo_item_image">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="weibo_item_image_single">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">300dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="item_text_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/selector_text_input</item>
    </style>

    <style name="item_image">
        <item name="android:layout_width">112dp</item>
        <item name="android:layout_height">86dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">图片</item>
    </style>
        <style name="item_image_gap">
        <item name="android:layout_width">10.0dip</item>
        <item name="android:layout_height">1.0dip</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="item_user_menu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@drawable/selector_cell</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:onClick">onClick</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="item_user_menu_right_arrow">
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/forward</item>
    </style>

    <style name="item_lib_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@color/blue</item>
    </style>
    <style name="item_lib_detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="item_lib_check">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/selector_check</item> 
        <item name="android:drawablePadding">10dp</item> 
        <item name="android:layout_marginLeft">5dp</item>
    </style>
    <style name="edit_text">
        <item name="android:layout_height">@dimen/defaut_input_height</item>
		<item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">16sp</item>
         <item name="android:background">@drawable/selector_text_input</item>
         <item name="android:layout_marginTop">5dp</item>
         <item name="android:layout_marginBottom">5dp</item>
    </style>
    <style name="button_blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/defaut_btn_height</item>
        <item name="android:textColor">@color/blue2white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/selector_blue_button</item>
    </style>
        <style name="shareDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/mystyle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景有灰度 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="mystyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/slide_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="toolbar_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>